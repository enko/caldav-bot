{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "module": "ES2022",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "lib": ["es2017"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
